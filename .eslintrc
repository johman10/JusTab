{
    "parserOptions": {
        "parser": "@babel/eslint-parser",
        "ecmaVersion": 6,
        "sourceType": "module",
    },
    "globals": {
        "chrome": true,
        "environment": true,
        "it": true,
        "describe": true,
        "beforeEach": true,
        "expect": true
    },
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "vue/html-indent": ["error", 2],
        "vue/max-attributes-per-line": [
            "error",
            {
                "singleline": {
                    "max": 3
                },
                "multiline": {
                    "max": 1
                }
            }
        ],
        "vue/html-self-closing": [
            "error",
            {
                "html": {
                    "void": "always",
                    "normal": "always",
                    "component": "always"
                },
                "svg": "always",
                "math": "always"
            }
        ]
    },
    "env": {"node": true, "browser": true, "es6": true},
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ]
}
